<StackPanel xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
	<Grid Margin="0,5,0,5">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Border BorderBrush="Gray" BorderThickness="0.5" Grid.Column="0" Grid.Row="0">
			<TextBlock TextWrapping="Wrap" Padding="5,2,5,2" FontWeight="Bold">First Header</TextBlock>
		</Border>
		<Border BorderBrush="Gray" BorderThickness="0.5" Grid.Column="1" Grid.Row="0">
			<TextBlock TextWrapping="Wrap" Padding="5,2,5,2" FontWeight="Bold" TextAlignment="Center">Second Header</TextBlock>
		</Border>
		<Border BorderBrush="Gray" BorderThickness="0.5" Grid.Column="2" Grid.Row="0">
			<TextBlock TextWrapping="Wrap" Padding="5,2,5,2" FontWeight="Bold" TextAlignment="Right">Third Header</TextBlock>
		</Border>
		<Border BorderBrush="Gray" BorderThickness="0.5" Grid.Column="0" Grid.Row="1">
			<TextBlock TextWrapping="Wrap" Padding="5,2,5,2">First row</TextBlock>
		</Border>
		<Border BorderBrush="Gray" BorderThickness="0.5" Grid.Column="1" Grid.Row="1">
			<TextBlock TextWrapping="Wrap" Padding="5,2,5,2" TextAlignment="Center">Data</TextBlock>
		</Border>
		<Border BorderBrush="Gray" BorderThickness="0.5" Grid.Column="2" Grid.Row="1">
			<TextBlock TextWrapping="Wrap" Padding="5,2,5,2" TextAlignment="Right">Very long data entry</TextBlock>
		</Border>
		<Border BorderBrush="Gray" BorderThickness="0.5" Grid.Column="0" Grid.Row="2">
			<TextBlock TextWrapping="Wrap" Padding="5,2,5,2">Second row</TextBlock>
		</Border>
		<Border BorderBrush="Gray" BorderThickness="0.5" Grid.Column="1" Grid.Row="2">
			<TextBlock TextWrapping="Wrap" Padding="5,2,5,2" TextAlignment="Center">
				<Bold>Cell</Bold>
			</TextBlock>
		</Border>
		<Border BorderBrush="Gray" BorderThickness="0.5" Grid.Column="2" Grid.Row="2">
			<TextBlock TextWrapping="Wrap" Padding="5,2,5,2" TextAlignment="Right">
				<Italic>Cell</Italic>
			</TextBlock>
		</Border>
	</Grid>
	<Grid Margin="0,5,0,5" ToolTip="Prototype table">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Border BorderBrush="Gray" BorderThickness="0.5" Grid.Column="0" Grid.Row="0">
			<StackPanel Margin="5,2,5,2" />
		</Border>
		<Border BorderBrush="Gray" BorderThickness="0.5" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2">
			<TextBlock TextWrapping="Wrap" Padding="5,2,5,2" FontWeight="Bold" TextAlignment="Center">Grouping</TextBlock>
		</Border>
		<Border BorderBrush="Gray" BorderThickness="0.5" Grid.Column="0" Grid.Row="1">
			<TextBlock TextWrapping="Wrap" Padding="5,2,5,2" FontWeight="Bold">First Header</TextBlock>
		</Border>
		<Border BorderBrush="Gray" BorderThickness="0.5" Grid.Column="1" Grid.Row="1">
			<TextBlock TextWrapping="Wrap" Padding="5,2,5,2" FontWeight="Bold" TextAlignment="Center">Second Header</TextBlock>
		</Border>
		<Border BorderBrush="Gray" BorderThickness="0.5" Grid.Column="2" Grid.Row="1">
			<TextBlock TextWrapping="Wrap" Padding="5,2,5,2" FontWeight="Bold" TextAlignment="Right">Third Header</TextBlock>
		</Border>
		<Border BorderBrush="Gray" BorderThickness="0.5" Grid.Column="0" Grid.Row="2">
			<TextBlock TextWrapping="Wrap" Padding="5,2,5,2">Content</TextBlock>
		</Border>
		<Border BorderBrush="Gray" BorderThickness="0.5" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2">
			<TextBlock TextWrapping="Wrap" Padding="5,2,5,2" TextAlignment="Center">
				<Italic>Long Cell</Italic>
			</TextBlock>
		</Border>
		<Border BorderBrush="Gray" BorderThickness="0.5" Grid.Column="0" Grid.Row="3">
			<TextBlock TextWrapping="Wrap" Padding="5,2,5,2">Content</TextBlock>
		</Border>
		<Border BorderBrush="Gray" BorderThickness="0.5" Grid.Column="1" Grid.Row="3">
			<TextBlock TextWrapping="Wrap" Padding="5,2,5,2" TextAlignment="Center">
				<Bold>Cell</Bold>
			</TextBlock>
		</Border>
		<Border BorderBrush="Gray" BorderThickness="0.5" Grid.Column="2" Grid.Row="3">
			<TextBlock TextWrapping="Wrap" Padding="5,2,5,2" TextAlignment="Right">Cell</TextBlock>
		</Border>
		<Border BorderBrush="Gray" BorderThickness="0.5" Grid.Column="0" Grid.Row="4">
			<TextBlock TextWrapping="Wrap" Padding="5,2,5,2">New section</TextBlock>
		</Border>
		<Border BorderBrush="Gray" BorderThickness="0.5" Grid.Column="1" Grid.Row="4">
			<TextBlock TextWrapping="Wrap" Padding="5,2,5,2" TextAlignment="Center">More</TextBlock>
		</Border>
		<Border BorderBrush="Gray" BorderThickness="0.5" Grid.Column="2" Grid.Row="4">
			<TextBlock TextWrapping="Wrap" Padding="5,2,5,2" TextAlignment="Right">Data</TextBlock>
		</Border>
	</Grid>
</StackPanel>