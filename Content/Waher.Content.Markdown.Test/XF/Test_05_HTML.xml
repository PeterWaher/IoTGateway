<StackLayout xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" Spacing="0" xmlns="http://xamarin.com/schemas/2014/forms">
	<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
		<Label LineBreakMode="WordWrap">
			<Label.FormattedText>
				<FormattedString>
					<Span Text="http://example.com/" TextColor="{Binding HyperlinkColor}">
						<Span.GestureRecognizers>
							<TapGestureRecognizer Command="{Binding HyperlinkClicked}" CommandParameter="http://example.com/" />
						</Span.GestureRecognizers>
					</Span>
				</FormattedString>
			</Label.FormattedText>
		</Label>
	</ContentView>
	<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
		<Label LineBreakMode="WordWrap">
			<Label.FormattedText>
				<FormattedString>
					<Span Text="mailto:address@example.com" TextColor="{Binding HyperlinkColor}">
						<Span.GestureRecognizers>
							<TapGestureRecognizer Command="{Binding HyperlinkClicked}" CommandParameter="mailto:address@example.com" />
						</Span.GestureRecognizers>
					</Span>
				</FormattedString>
			</Label.FormattedText>
		</Label>
	</ContentView>
	<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
		<Label LineBreakMode="WordWrap" TextType="Html"><![CDATA[<table>
    <tr>
        <td>Foo</td>
    </tr>
</table>]]></Label>
	</ContentView>
	<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
		<Label LineBreakMode="WordWrap" TextType="Html"><![CDATA[This is an example of <b>bold text</b>.]]></Label>
	</ContentView>
	<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
		<Label LineBreakMode="WordWrap" TextType="Html"><![CDATA[© Waher Data AB 2016-2023. All rights reserved.]]></Label>
	</ContentView>
	<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
		<Label LineBreakMode="WordWrap" TextType="Html"><![CDATA[AT&amp;T]]></Label>
	</ContentView>
	<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
		<Label LineBreakMode="WordWrap" TextType="Html"><![CDATA[4 &lt; 5]]></Label>
	</ContentView>
	<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
		<Label LineBreakMode="WordWrap" TextType="Html"><![CDATA[&#124;]]></Label>
	</ContentView>
	<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
		<Label LineBreakMode="WordWrap" TextType="Html"><![CDATA[&#124;]]></Label>
	</ContentView>
	<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
		<Label LineBreakMode="WordWrap" TextType="Html"><![CDATA[<span class="test">This is a test in a SPAN tag.</span>]]></Label>
	</ContentView>
	<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
		<Label LineBreakMode="WordWrap" TextType="Html"><![CDATA[User Name:<br/>
<input id="UserName" name="UserName" type="text" autofocus="autofocus" style="width:20em" />]]></Label>
	</ContentView>
	<ContentView Padding="0,5,0,5" HorizontalOptions="Start">
		<Label LineBreakMode="WordWrap" TextType="Html"><![CDATA[<textarea id="command" autofocus="autofocus" wrap="hard" onkeydown="return CommandKeyDown(this,event);">Command</textarea>]]></Label>
	</ContentView>
</StackLayout>