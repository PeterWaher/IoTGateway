<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
		<Authors>Peter Waher</Authors>
		<Company>Waher Data AB</Company>
		<Product>Waher.IoTGateway</Product>
		<Description>Class library that simplifies the creation of groups of metering nodes (things).</Description>
		<Copyright>Copyright © Waher Data AB 2025-2026. All rights reserved.</Copyright>
		<PackageLicenseUrl />
		<PackageProjectUrl>https://github.com/PeterWaher/IoTGateway/tree/master/Groups/Waher.Groups</PackageProjectUrl>
		<RepositoryUrl>https://github.com/PeterWaher/IoTGateway</RepositoryUrl>
		<RepositoryType>GitHub</RepositoryType>
		<PackageTags>IoT</PackageTags>
		<NeutralLanguage>English</NeutralLanguage>
		<AssemblyVersion>1.0.0</AssemblyVersion>
		<FileVersion>1.0.0</FileVersion>
		<Version>1.0.0</Version>
		<PackageIconUrl />
		<FileUpgradeFlags>40</FileUpgradeFlags>
		<UpgradeBackupLocation>C:\My Projects\IoTGateway\Backup\Groups\Waher.Groups\</UpgradeBackupLocation>
		<OldToolsVersion>2.0</OldToolsVersion>
		<PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
		<PackageIcon>Icon_64x64.png</PackageIcon>
	</PropertyGroup>
	<PropertyGroup>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
	</PropertyGroup>
	<ItemGroup>
	  <Content Include="Language\Waher.Groups.Metering.en.lng">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </Content>
	</ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Things\Waher.Things.Metering\Waher.Things.Metering.csproj" />
    <ProjectReference Include="..\..\Things\Waher.Things\Waher.Things.csproj" />
    <ProjectReference Include="..\Waher.Groups\Waher.Groups.csproj" />
  </ItemGroup>
	<ItemGroup>
		<None Include="..\..\Images\Icon_64x64.png">
			<Pack>True</Pack>
			<PackagePath />
		</None>
		<None Include="..\..\LICENSE.txt">
			<Pack>True</Pack>
			<PackagePath />
		</None>
	</ItemGroup>

</Project>
