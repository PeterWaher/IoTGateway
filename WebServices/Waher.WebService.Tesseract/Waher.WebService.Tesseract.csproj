<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<PackageId>Waher.WebService.Tesseract</PackageId>
    <Authors>Peter Waher</Authors>
    <Company>Waher Data AB</Company>
    <Product>Waher.IoTGateway</Product>
    <Description>Class library that provides a web service that can act as a gateway to Tesseract, installed on the same machine as the gateway.</Description>
    <Copyright>Copyright Â© Waher Data AB 2022-2024. All rights reserved.</Copyright>
    <PackageProjectUrl>https://github.com/PeterWaher/IoTGateway/tree/master/WebServices/Waher.WebService.Tesseract</PackageProjectUrl>
    <PackageIcon>Icon_64x64.png</PackageIcon>
    <RepositoryUrl>https://github.com/PeterWaher/IoTGateway</RepositoryUrl>
    <RepositoryType>GitHub</RepositoryType>
    <PackageTags>web service API Tesseract OCR</PackageTags>
    <AssemblyVersion>1.0.5</AssemblyVersion>
    <FileVersion>1.0.5</FileVersion>
		<Version>1.0.5</Version>
		<PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
  </PropertyGroup>
	<PropertyGroup>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="Root\Tesseract\Api.md" />
    <None Remove="Waher.WebService.Tesseract.manifest" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="Root\Tesseract\Api.md">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Waher.WebService.Tesseract.manifest">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <None Include="..\..\Images\Icon_64x64.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="System.Text.RegularExpressions" Version="4.3.1" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\Content\Waher.Content\Waher.Content.csproj" />
    <ProjectReference Include="..\..\Networking\Waher.Networking.HTTP\Waher.Networking.HTTP.csproj" />
    <ProjectReference Include="..\..\Runtime\Waher.Runtime.Inventory\Waher.Runtime.Inventory.csproj" />
    <ProjectReference Include="..\..\Runtime\Waher.Runtime.Temporary\Waher.Runtime.Temporary.csproj" />
    <ProjectReference Include="..\..\Runtime\Waher.Runtime.Timing\Waher.Runtime.Timing.csproj" />
    <ProjectReference Include="..\..\Security\Waher.Security\Waher.Security.csproj" />
    <ProjectReference Include="..\..\Waher.IoTGateway\Waher.IoTGateway.csproj" />
  </ItemGroup>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="&quot;C:\My Projects\IoTGateway\Utilities\Waher.Utility.Install\bin\$(ConfigurationName)\net6.0\win-x86\Waher.Utility.Install.exe&quot; -s &quot;C:\My Projects\IoTGateway\Waher.IoTGateway.Console\bin\$(ConfigurationName)\net6.0\Waher.IoTGateway.Console.exe&quot; -d &quot;C:\ProgramData\IoT Gateway Dev&quot; -m &quot;C:\My Projects\IoTGateway\WebServices\Waher.WebService.Tesseract\bin\$(ConfigurationName)\netstandard2.0\Waher.WebService.Tesseract.manifest&quot;" Condition="'$(OS)'=='Windows_NT'" />
    <Exec Command="&quot;/My Projects/IoTGateway/Utilities/Waher.Utility.Install/bin/$(ConfigurationName)/net6.0/osx-arm64/Waher.Utility.Install&quot; -s &quot;/My Projects/IoTGateway/Waher.IoTGateway.Console/bin/$(ConfigurationName)/net6.0/Waher.IoTGateway.Console.dll&quot; -d &quot;/usr/local/share/IoT Gateway Dev&quot; -m &quot;/My Projects/IoTGateway/WebServices/Waher.WebService.Tesseract/bin/$(ConfigurationName)/netstandard2.0/Waher.WebService.Tesseract.manifest&quot;" Condition="'$(OS)'=='Unix'" />
  </Target>
</Project>